# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# SQLite (development) - uses backend/instance/pokehub_dev.db
# Path is relative to backend/ directory where Flask runs
DATABASE_URL=sqlite:///instance/pokehub_dev.db

# Flask Instance Path (no longer needed - removed for simplification)
# FLASK_INSTANCE_PATH=backend/instance

# PostgreSQL (production) - uncomment for production deployment
# DATABASE_URL=postgresql://user:password@localhost:5432/pokedex

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# PokeAPI Configuration
POKEAPI_BASE_URL=https://pokeapi.co/api/v2

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Docker Configuration
# Pokemon seeding timeout (seconds) - adjust based on number of Pokemon
# Formula: (Total Pokemon Ã— 0.2s) + 30s buffer
# Default: 120s for 649 Pokemon (Gen 1-5)
POKEMON_SEEDING_TIMEOUT=120

# Docker health check start period (seconds) - should be timeout + 10s buffer
# Default: 130s (120s timeout + 10s buffer)
HEALTHCHECK_START_PERIOD=130

# Production Configuration
# Set these in production
# FLASK_ENV=production
# FLASK_DEBUG=False
